@using MyFicDB.Web.ViewModels.Chapter
@model ChapterEditViewModel

@{
    ViewData["Title"] = $"Edit Chapter - {Model.Title}";
    var hasNotes = Model.InlineNotes is { Count: > 0 };
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="mb-1">Edit Chapter</h1>
        <div class="text-body-secondary">@Model.StoryTitle</div>
    </div>
</div>

<form method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="StoryId" />
    <input type="hidden" asp-for="StoryTitle" />
    <input type="hidden" asp-for="ChapterId" />

    <div class="mfdb-editor-layout @(hasNotes ? "" : "no-notes")">

        <!-- EDITOR -->
        <div class="mfdb-editor-pane">
            <div class="card shadow-sm h-100">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="ChapterNumber" class="form-control" />
                                <label asp-for="ChapterNumber"></label>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="form-floating">
                                <input asp-for="Title" class="form-control" />
                                <label asp-for="Title">Title (optional)</label>
                            </div>
                        </div>
                    </div>

                    <label asp-for="Body" class="form-label"></label>
                    <textarea asp-for="Body"
                              id="TinyMCE-Editor"
                              class="form-control wysiwyg"></textarea>

                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>

                <div class="card-footer d-flex justify-content-end gap-2">
                    <a class="btn btn-outline-secondary"
                       asp-controller="Chapters"
                       asp-action="View"
                       asp-route-storyId="@Model.StoryId"
                       asp-route-chapterNumber="@Model.ChapterNumber">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-primary">
                        Save changes
                    </button>

                    <button type="button"
                            class="btn btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteChapterModal">
                        Delete
                    </button>
                </div>
            </div>
        </div>

        @if (hasNotes)
        {
            <!-- INLINE NOTES -->
            <div class="mfdb-notes-pane">

                <div class="mfdb-notes-rail" id="expandInlineNotes">
                    &raquo;
                </div>

                <div class="card border-warning mfdb-notes-content position-sticky">

                    <div class="card-header bg-warning-subtle d-flex justify-content-between align-items-center">
                        <strong>
                            Inline notes
                            <span class="badge bg-secondary ms-1">@Model.InlineNotes.Count</span>
                        </strong>

                        <button type="button"
                                class="btn btn-sm btn-outline-secondary"
                                id="collapseInlineNotes">
                            Collapse
                        </button>
                    </div>

                    <div class="card-body overflow-auto">
                        <p class="small text-body-secondary">
                            These were added while reading. They will be cleared when you save.
                        </p>

                        <ul class="list-group list-group-flush">
                            @foreach (var note in Model.InlineNotes)
                            {
                                <li class="list-group-item">
                                    <strong>
                                        @(note.Details.Length > 140
                                                                        ? note.Details[..140] + "…"
                                                                        : note.Details)
                            </strong>

                                    <div class="small text-body-secondary">
                                        Added @note.CreatedDate.ToLocalTime().ToString("g")
                                    </div>
                                </li>
                                                }
                        </ul>
                    </div>
                </div>
            </div>
        }

    </div>
</form>

<form id="deleteChapterForm"
      asp-action="Delete"
      asp-route-storyId="@Model.StoryId"
      asp-route-id="@Model.ChapterId"
      method="post">
    @Html.AntiForgeryToken()
</form>

@await Html.PartialAsync("_ConfirmDeleteModalPartial", new ConfirmDeleteModalViewModel
{
    ModalId = "deleteChapterModal",
    LabelId = "deleteChapterModalLabel",
    FormId = "deleteChapterForm",
    BodyText = "Are you sure you want to delete this Chapter?"
})

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/js/tinymce-theme-switch.js" asp-append-version="true"></script>

    <script>
        (function () {
            var layout = document.querySelector(".mfdb-editor-layout");
            if (!layout) return;

            document.getElementById("collapseInlineNotes")?.addEventListener("click", function () {
                layout.classList.add("notes-collapsed");
            });

            document.getElementById("expandInlineNotes")?.addEventListener("click", function () {
                layout.classList.remove("notes-collapsed");
            });
        })();
    </script>
}