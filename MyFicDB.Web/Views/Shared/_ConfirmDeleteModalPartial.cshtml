@model ConfirmDeleteModalViewModel

<div class="modal fade"
     id="@Model.ModalId"
     tabindex="-1"
     aria-labelledby="@Model.LabelId"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="@Model.LabelId">
                    @Model.Title
                </h5>
            </div>

            <div class="modal-body">
                <p class="mb-0">
                    @if (!string.IsNullOrWhiteSpace(Model.ItemLabel))
                    {
                        @:Are you sure you want to delete this @Model.ItemLabel?
                    }
                    else
                    {
                        @Model.BodyText
                    }
                </p>

                <p class="text-danger fw-semibold mt-2 mb-0">
                    @Model.DangerText
                </p>
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-bs-dismiss="modal">
                    @Model.CancelText
                </button>

                <button type="submit"
                        class="btn btn-danger"
                        form="@Model.FormId">
                    @Model.ConfirmText
                </button>
            </div>

        </div>
    </div>
</div>
