@using MyFicDB.Core.Extensions
@using MyFicDB.Core.Helpers
@using MyFicDB.Web.ViewModels.Actor
@model ActorViewViewModel

@{
    ViewData["Title"] = $"Actor: {Model.Name}";
    var imageUrl = Url.Action("Image", "Actors", new { slug = Model.Slug });

    var hasAnyProps = Model.Age > 0; // add more checks later (Location, EyeColor, etc.)
}

<div class="row g-3">
    <!-- Left: Profile column -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between gap-3">
                    <div class="flex-shrink-0">
                        <div class="position-relative" style="width: 120px; height: 120px;">
                            <img src="@Url.Action("Image", "Actors", new { slug = Model.Slug })"
                                 alt="@Model.Name"
                                 class="rounded border img-fluid w-100 h-100"
                                 style="object-fit: cover;" />
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-slug="@Model.Slug">Edit</a>
                    </div>
                </div>

                <div class="mt-3">
                    <h1 class="h4 mb-1">@Model.Name</h1>
                </div>

                <div class="mt-3">
                    @if (string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <div class="text-body-secondary">
                            No description supplied.
                        </div>
                    }
                    else
                    {
                        <div class="text-body-secondary">
                            @Model.Description
                        </div>
                    }
                </div>

                <div class="mt-3 pt-3 border-top">
                    <div class="d-flex gap-4">
                        <div>
                            <div class="fw-semibold">@Model.Stories.Count</div>
                            <div class="text-body-secondary small">Stories</div>
                        </div>
                        @* Add more quick stats later (e.g. Tags, Series appearances, etc.) *@
                    </div>
                </div>
            </div>
        </div>

        @if (hasAnyProps)
        {
            <div class="card shadow-sm mt-3">
                <div class="card-header">
                    <span class="fw-semibold">Metadata</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-0 small">
                        @if (Model.Age > 0)
                        {
                            <dt class="col-5 text-body-secondary">Age</dt>
                            <dd class="col-7 mb-2">@Model.Age</dd>
                        }

                        @* Future examples
                        <dt class="col-5 text-body-secondary">Location</dt>
                        <dd class="col-7 mb-2">@Model.Location</dd>

                        <dt class="col-5 text-body-secondary">Eye color</dt>
                        <dd class="col-7 mb-2">@Model.EyeColor</dd>
                        *@
                    </dl>
                </div>
            </div>
        }
    </div>

    <!-- Right: Feed column -->
    <div class="col-lg-8" id="stories">
        <div class="card shadow-sm">
            <div class="card-header d-flex align-items-center justify-content-between">
                <div class="fw-semibold">Stories</div>
                <span class="text-body-secondary small">@Model.Stories.Count total</span>
            </div>

            <div class="card-body p-0">
                @if (Model.Stories.Count == 0)
                {
                    <div class="p-3 text-body-secondary">
                        No stories are linked to this actor yet.
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var s in Model.Stories)
                        {
                            <a class="list-group-item list-group-item-action p-3"
                               asp-controller="Stories"
                               asp-action="View"
                               asp-route-id="@s.StoryId">

                                <div class="d-flex justify-content-between align-items-start gap-3">
                                    <div class="min-w-0">
                                        <div class="fw-semibold text-truncate">@s.Title</div>

                                        @if (!string.IsNullOrWhiteSpace(s.Summary))
                                        {
                                            <div class="text-body-secondary small mt-1">
                                                @s.Summary.TruncateWords(40)
                                            </div>
                                        }
                                    </div>

                                    <div class="flex-shrink-0">
                                        <span class="badge rounded-pill text-bg-light border">
                                            @s.ChapterCount ch
                                        </span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>