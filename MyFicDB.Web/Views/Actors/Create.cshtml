@using MyFicDB.Web.ViewModels.Actor
@model ActorCreateViewModel

@{
    ViewData["Title"] = "Create Actor";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="mb-1">Create Actor</h1>
        <div class="text-body-secondary">Add a New Actor</div>
    </div>

    <a class="btn btn-outline-secondary" asp-action="Index">Back to Actors</a>
</div>

<form method="post" enctype="multipart/form-data" class="card shadow-sm">
    @Html.AntiForgeryToken()

    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="row g-3">
            <div class="col-md-7">
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" autocomplete="off" />
                    <label asp-for="Name"></label>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-5">
                <div class="form-floating">
                    <input asp-for="Age" class="form-control" type="number" min="0" max="200" />
                    <label asp-for="Age"></label>
                </div>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-floating">
                    @* Rows doesn't work on floating label text-areas *@
                    <textarea asp-for="Description" class="form-control" style="min-height: 250px;"></textarea>
                    <label asp-for="Description"></label>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Image" class="form-label">Image (optional)</label>
                <input asp-for="Image"
                       class="form-control"
                       type="file"
                       accept=".png,.jpg,.jpeg,.webp,image/png,image/jpeg,image/webp" />
                <div class="form-text">Allowed: PNG/JPG/WEBP. Max size enforced server-side.</div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card-footer d-flex justify-content-end gap-2">
        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}